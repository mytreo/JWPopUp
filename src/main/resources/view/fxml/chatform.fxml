<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<VBox alignment="BOTTOM_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      stylesheets="@../stylesheet/chatform.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ua.mytreo.java.jwpopup.controller.ChatController">
        <ListView fx:id="chatListView" prefWidth="500.0" VBox.vgrow="ALWAYS"/>
        <HBox maxHeight="17.0" minHeight="17.0"/>
        <TextArea fx:id="chatArea" maxHeight="100.0" minHeight="100.0"/>
        <HBox alignment="CENTER" maxHeight="32.0" spacing="5.0">
                <Button fx:id="btnSend" mnemonicParsing="false" onAction="#btnSendClick" prefHeight="25.0"
                        prefWidth="200.0" text="Send"/>
                <Button fx:id="btnNew" mnemonicParsing="false" onAction="#btnNewClick" prefHeight="25.0"
                        prefWidth="200.0" text="New"/>
            <VBox.margin>
                <Insets bottom="1.0" left="1.0" right="1.0" top="1.0"/>
            </VBox.margin>
        </HBox>
</VBox>
